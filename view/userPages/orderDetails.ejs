<%- include('../userLayouts/header.ejs') %>
<%- include('../userLayouts/pageHeader.ejs') %>

    <style>
        .address, .payment, .summary {
            margin-bottom: 20px;
        }

        .address h3, .payment h3, .summary h3 {
            margin-bottom: 10px;
            font-size: 1.1em;
        }

        .product {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
        }

        .product img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 20px;
        }

        .product-details {
            flex: 1;
        }

        .product-details h4 {
            margin: 0 0 5px 0;
        }

        .product-details p {
            margin: 5px 0;
        }

        .product .cancel-btn {
            background-color: #ff4d4d;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .summary {
            border-top: 1px solid #ddd;
            padding-top: 15px;
        }

        .summary .total {
            font-weight: bold;
        }
    </style>

    <div class="container" style="padding-top: 100px;">
        <div class="order-header">
            <h2>Order Details</h2>
            <p>#order id:<%= order.orderId %></p>
        </div>

        <div class="address">
            <h3>Shipping Address</h3>
            <p><strong><%= order.address.name %></strong></p>
            <p><%= order.address.address %></p>
            <p><%= order.address.city%>, <%= order.address.state %>, <%= order.address.pincode %></p>
            <p><%= order.address.country %></p>
        </div>

        <div class="payment">
            <span>Payment Methods : <%= order.payment_type %></span>
        </div>

        <% order.products.forEach(item => { %>
            <div class="products">
                <div class="product">
                    <img src="/uploads/<%= item.productId.images[0] %>" alt="Product Image">
                    <div class="product-details">
                        <h4><%= item.productId.name %></h4>
                        <p>₹ <%= item.productId.price %></p>
                    </div>
                    <button class="cancel-btn">Cancel</button>
                </div>
            </div>
        <% }) %>

        <div class="summary">
            <strong>Order Summary</strong>
            <p>Subtotal: ₹ <%= order.order_total %></p>
            <p>Shipping: Free</p>
            <p class="total">Grand Total: ₹ <%= order.order_total %></p>
        </div>
    </div>

<%- include('../userLayouts/pageFooter.ejs') %>
	<%- include('../userLayouts/footer.ejs') %>