<script>
	function logout() {
		Swal.fire({
			title: 'Are you sure ?',
			text: 'You want Logout',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			cancelButtonText: 'Cancel',
			confirmButtonText: 'Confirm'
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = '/logout';
			}
		});
	}
</script>